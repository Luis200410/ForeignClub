{
  "version": 2,
  "builds": [
    { "src": "api/index.py", "use": "@vercel/python" },
    { "src": "core/static/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/static/(.*)", "dest": "/core/static/$1" },
    { "src": "/(.*)", "dest": "/api/index.py" }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "foreign.settings",
    "PYTHONUNBUFFERED": "1"
  }
}
